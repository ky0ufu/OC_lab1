{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "DEBUGING: hello_world (gdb) ",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/hello_world",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "BUILD",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
            ]
        }

    ]
}